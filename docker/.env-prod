#
# Production environment configuration
#

PYTHONUNBUFFERED=1
COMPOSE_PROJECT_NAME=superset

# IMPORTANT: Set DEV_MODE=false for production build
DEV_MODE=false

# Database configurations
DATABASE_DB=superset
DATABASE_HOST=db
DATABASE_PASSWORD=superset_prod_password
DATABASE_USER=superset
DATABASE_PORT=5432
DATABASE_DIALECT=postgresql

# PostgreSQL settings
POSTGRES_DB=superset
POSTGRES_USER=superset
POSTGRES_PASSWORD=superset_prod_password

# Examples database
EXAMPLES_DB=examples
EXAMPLES_HOST=db
EXAMPLES_USER=examples
EXAMPLES_PASSWORD=examples_prod_password
EXAMPLES_PORT=5432

# Python path
PYTHONPATH=/app/pythonpath:/app/docker/pythonpath_dev

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Production settings
FLASK_DEBUG=false
SUPERSET_LOG_LEVEL=info
SUPERSET_APP_ROOT="/"
SUPERSET_ENV=production
SUPERSET_LOAD_EXAMPLES=yes
SUPERSET_PORT=8088

# Security - Change this in real production!
SUPERSET_SECRET_KEY=PRODUCTION_SECRET_KEY_CHANGE_ME_12345

# Browser settings
ENABLE_PLAYWRIGHT=false
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
BUILD_SUPERSET_FRONTEND_IN_DOCKER=false
